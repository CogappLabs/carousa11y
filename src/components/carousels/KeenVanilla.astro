---
import { slides } from '../../data/slides'
import Slide from '../Slide.astro'
---

<div class="keen-slider carousel-loading" id="keen-slider" role="region" aria-label="Featured content carousel">
  {slides.map((s) => (
    <div class="keen-slider__slide">
      <Slide {...s} />
    </div>
  ))}
</div>
<div class="keen-controls flex justify-center gap-4 mt-4">
  <button id="keen-prev" type="button" class="carousel-btn">Previous</button>
  <button id="keen-next" type="button" class="carousel-btn">Next</button>
</div>
<div id="keen-dots" class="flex justify-center gap-2 mt-4">
  {slides.map((_, i) => (
    <button
      type="button"
      class={`keen-dot w-3 h-3 rounded-full border-none cursor-pointer p-0 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 ${i === 0 ? 'bg-stone-800' : 'bg-stone-300 hover:bg-stone-400'}`}
      aria-label={`Go to slide ${i + 1}`}
      aria-current={i === 0 ? 'true' : undefined}
      data-index={i}
    />
  ))}
</div>

<script>
  async function initKeen() {
    const KeenSlider = (await import('keen-slider')).default
    const dots = document.querySelectorAll('.keen-dot')

    const updateDots = (index: number) => {
      dots.forEach((dot, i) => {
        const isActive = i === index
        dot.classList.toggle('bg-stone-800', isActive)
        dot.classList.toggle('bg-stone-300', !isActive)
        dot.classList.toggle('hover:bg-stone-400', !isActive)
        dot.setAttribute('aria-current', isActive ? 'true' : 'false')
      })
    }

    const sliderEl = document.getElementById('keen-slider')
    const keenSlider = new KeenSlider('#keen-slider', {
      loop: true,
      slideChanged: (s) => {
        updateDots(s.track.details.rel)
      },
    })

    sliderEl?.classList.remove('carousel-loading')
    sliderEl?.classList.add('carousel-ready')

    document.getElementById('keen-prev')?.addEventListener('click', () => keenSlider.prev())
    document.getElementById('keen-next')?.addEventListener('click', () => keenSlider.next())

    dots.forEach((dot) => {
      dot.addEventListener('click', () => {
        const index = Number(dot.getAttribute('data-index'))
        keenSlider.moveToIdx(index)
      })
    })
  }

  initKeen()
</script>
